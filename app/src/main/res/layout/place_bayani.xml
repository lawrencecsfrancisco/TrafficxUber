<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000000"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#FFF0D6"
            android:orientation="vertical">
            <!--StartTitle-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:gravity="center">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bantayog ng Bayani"
                    android:textColor="#EE7469"
                    android:textSize="35sp"
                    android:textStyle="normal|bold" />
            </LinearLayout>
            <!--End-->


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@drawable/bayanii">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="220dp"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    android:background="#EE7469"
                    android:weightSum="1"
                    android:visibility="gone"
                    android:id="@+id/hiders">

                    <Button
                        android:layout_width="250dp"
                        android:layout_height="40dp"
                        android:text="Ninoy Aquino Wildlife"
                        android:background="#FFF0D6"
                        android:textColor="#EE7469"
                        android:onClick="p1"
                        android:id="@+id/p1"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="35dp" />

                    <Button
                        android:layout_width="250dp"
                        android:layout_height="40dp"
                        android:text="Quezon Memorial Circle"
                        android:background="#FFF0D6"
                        android:textColor="#EE7469"
                        android:id="@+id/p2"
                        android:onClick="p2"
                        android:layout_below="@+id/p1"
                        android:layout_alignStart="@+id/p1"
                        android:layout_marginTop="10dp" />

                    <Button
                        android:layout_width="250dp"
                        android:layout_height="40dp"
                        android:background="#FFF0D6"
                        android:textColor="#EE7469"
                        android:id="@+id/p3"
                        android:onClick="p3"
                        android:layout_below="@+id/p2"
                        android:layout_alignStart="@+id/p2"
                        android:layout_marginTop="10dp"
                        android:text="UP Ayala Technohub" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:id="@+id/textView21"
                        android:gravity="center"
                        android:text="Suggested Places"
                        android:textStyle="bold"
                        android:textSize="20dp"
                        android:textColor="#383732"
                        android:layout_marginTop="5dp"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentEnd="true" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_gravity="bottom"
                    android:background="#383732"
                    android:orientation="horizontal">
                    <RatingBar
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/ratingBar"
                        android:isIndicator="true"
                        android:scaleX=".5"
                        android:scaleY=".5"
                        android:rating="4.5"/>
                </LinearLayout><!--QUEZONMEMORIALCIRCLE -->
            </LinearLayout>


            <!--   START NEW SCROLL VIEW-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="About"
                    android:textColor="#383732"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:id="@+id/textView"
                    android:layout_alignParentTop="true"
                    android:textStyle="bold"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmallPopupMenu"
                        android:text="The Bantayog ng mga Bayani Center is a memorial dedicated to people deemed as heroes during the Martial law period and the People Power Revolution."
                        android:id="@+id/textView2"
                        android:textColor="#383732"
                        android:layout_below="@+id/textView"
                        android:layout_toRightOf="@+id/textView"
                        android:layout_alignParentEnd="true" />
                </LinearLayout>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Contact"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/textView3"
                    android:textColor="#383732"
                    android:textStyle="bold"
                    android:layout_below="@+id/textView2"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmallPopupMenu"
                        android:text="(02) 434 8343"
                        android:textColor="#383732"
                        android:id="@+id/textView4"
                        android:layout_below="@+id/textView3"
                        android:layout_alignLeft="@+id/textView2"
                        android:layout_alignStart="@+id/textView2"/>
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Address"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/textView5"
                    android:layout_below="@+id/textView4"
                    android:textColor="#383732"
                    android:textStyle="bold"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmallPopupMenu"
                        android:text="Bantayog Rd, Diliman, Quezon City, Metro Manila"
                        android:id="@+id/textView6"
                        android:layout_below="@+id/textView5"
                        android:textColor="#383732"
                        android:layout_toRightOf="@+id/textView"
                        android:layout_toEndOf="@+id/textView" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Rates :"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/textView7"
                    android:layout_below="@+id/textView4"
                    android:textColor="#383732"
                    android:textStyle="bold"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmallPopupMenu"
                        android:text="Admission Fee: Php 50.00.\nParking spaces are available for tour buses and private vehicle."
                        android:id="@+id/textView8"
                        android:layout_below="@+id/textView5"
                        android:textColor="#383732"
                        android:layout_toRightOf="@+id/textView"
                        android:layout_toEndOf="@+id/textView" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Points of Interests :"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/textView9"
                    android:layout_below="@+id/textView4"
                    android:textColor="#383732"
                    android:textStyle="bold"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmallPopupMenu"
                        android:text="* Wall of Remembrance\n* Inang Bayan monument\n* Various protest artworks"
                        android:id="@+id/textView10"
                        android:layout_below="@+id/textView5"
                        android:textColor="#383732"
                        android:layout_toRightOf="@+id/textView"
                        android:layout_toEndOf="@+id/textView" />
                </LinearLayout>






                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp">
                        <Button
                            style="?android:attr/buttonStyleSmall"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="#EE7469"
                            android:background="@drawable/border"
                            android:text="Add Destination"
                            android:layout_marginBottom="10dp"
                            android:layout_below="@+id/hiders"
                            android:id="@+id/ad"
                            android:layout_alignParentStart="true"
                            android:onClick="artadd" />
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp">
                        <Button
                            style="?android:attr/buttonStyleSmall"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="#EE7469"
                            android:background="@drawable/border"
                            android:text="Delete Destination"
                            android:id="@+id/button2"
                            android:onClick="artdelete"
                            android:layout_below="@+id/ad"
                            android:layout_alignEnd="@+id/textView6" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/number_layout"
                android:layout_marginTop="10dp" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>
